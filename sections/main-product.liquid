{% assign first_product = product.selected_or_first_available_variant %}

{% for block in section.blocks %}
    {% case block.type %}
        {% when 'title' %}
            <p>{{ product.title }}</p>
        {% when 'price' %}
            <ol>
                <li>compare at price: {{ product.compare_at_price }}</li>
                <li>compare at price (max): {{ product.compare_at_price_max }}</li>
                <li>compare at price (min): {{ product.compare_at_price_min }}</li>
                <li>compare at price varies?: {{ product.compare_at_price_varies }}</li>
            </ol>

            <ol>
                <li>price: {{ product.price }}</li>
                <li>price (max): {{ product.price_max }}</li>
                <li>price (min): {{ product.price_min }}</li>
                <li>price varies?: {{ product.price_varies }}</li>
            </ol>
    {% endcase %}    
{% endfor %}


{% schema %}
{
    "name": "Main PRODUCT",
    "tag": "section",
    "class": "hola",
    "settings": [],
    "blocks": [
        {
            "name": "Title",
            "type": "title",
            "settings": []
        },
        {
            "name": "Price",
            "type": "price",
            "settings": []
        }
    ]
}
{% endschema %}